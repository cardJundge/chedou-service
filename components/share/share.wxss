/* 测试分享框 */
.share-body {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  z-index: 9999;
  padding-top: 120rpx;
}

.share-content {
  width: 500rpx;
  height: 870rpx;
  padding: 12rpx;
  background-color: #fff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.share-bottom {
  width: 100%;
  height: 228rpx;
  background: #fff;
  border-radius: 50% 50% 0 0;
}

