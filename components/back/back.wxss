/* 任务退回框 */
.module-body {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.module-content {
  width: 600rpx;
  height: 530rpx;
  background-color: #fff;
  border-radius: 4rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between
}

.top-title {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  font-size: 36rpx;
}

.input-box {
  width: 100%;
  height: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 12rpx 24rpx;
}

.input-box textarea {
  width: 100%;
  border: 1px solid #eeeeee;
  padding: 18rpx 24rpx;
}

.bottom-btn-bar {
  display: flex;
  align-items: center;
  width: 100%;
  height: 90rpx;
  font-size: 40rpx;
  border-top: 1px solid #eeeeee;
}

.bottom-btn-bar view {
  width: 50%;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bottom-btn-bar view:first-child {
  border-right: 1px solid #eeeeee;
}

.bottom-btn-bar view:last-child {
  color: #1a65ff;
}