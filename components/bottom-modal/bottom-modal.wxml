<!--底部操作模态框-->
<view class="bottom-modal-body" wx:if="{{isShow}}">
  <view class="bottom-content">
  <view class="bottom-item">
      <i-icon class="icon" type="brush_fill" size="18"/>
      <text>编辑</text>
    </view>
    <view class="bottom-item">
      <i-icon class="icon" type="trash_fill" size="18"/>
      <text>删除</text>
    </view>
    <view class="bottom-item" bindtap="closeModal">
      <i-icon class="icon" type="accessory" size="18"/>
      <text>取消</text>
    </view>
  </view>
</view>
