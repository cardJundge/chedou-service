<view class="list-body">
  <view class="list-top">
    <view class="search-bg">
      <view class="search-box">
        <view class="search">
          <input placeholder-class="ph-class" type='text' placeholder="搜索业务" bindinput="search"></input>
          <image src="/images/personnel/icon_search.png"></image>
        </view>
        <image bindtap="addBusiness" class="add" src="/images/personnel/icon_add.png"></image>
      </view>
    </view>
  </view>
  <view class="list-content" wx:if="{{!hasNoData}}">
    <view class="list-item" wx:for="{{businessList}}" bindtap="toBusinessDetail" data-listId="{{item.id}}">
      <view class="list-item-left">
        <text wx:if="{{typeKey == 'survey'}}">编号: {{item.survey_no}}</text>
        <text wx:if="{{typeKey == 'trailer'}}">编号: {{item.trailer_no}}</text>
        <text wx:if="{{typeKey == 'push'}}">编号: {{item.push_no}}</text>
        <text wx:if="{{typeKey == 'rescue'}}">编号: {{item.rescue_no}}</text>
        <text wx:if="{{typeKey == 'risk'}}">编号: {{item.risk_no}}</text>
        <text wx:if="{{item.type == 0}}">查勘 {{item.car_no ? ('| ' + item.car_no) : ''}} {{item.send_user ? ('| ' + item.send_user) : ''}}</text>
        <text wx:if="{{item.type == 1}}">三责 {{item.car_no ? ('| ' + item.car_no) : ''}} {{item.send_user ? ('| ' + item.send_user) : ''}}</text>
        <text wx:if="{{item.type == 2}}">标的 {{item.car_no ? ('| ' + item.car_no) : ''}} {{item.send_user ? ('| ' + item.send_user) : ''}}</text>
      </view>
      <text class='list-item-right status01' wx:if='{{item.status==0}}'>待审核</text>
      <text class='list-item-right status02' wx:if='{{item.status==1}}'>审核失败</text>
      <text class='list-item-right status03' wx:if='{{item.status==2}}'>审核成功</text>
      <text class='list-item-right status04' wx:if='{{item.status==3}}'>已分配</text>
      <text class='list-item-right status05' wx:if='{{item.status==4}}'>进行中</text>
      <text class='list-item-right status06' wx:if='{{item.status==5}}'>已取消</text>
      <text class='list-item-right status07' wx:if='{{item.status==6}}'>已完成</text>
    </view>
    <view class="more-data" wx:if="{{hasMoreData}}" bindtap="getMoreData">点击加载更多...</view>
  </view>
  <view class="no-data" wx:if="{{hasNoData}}">
    暂无数据
  </view>
</view>