<!--申请加入详情-->
<view class="join-details-body">
  <view class="union-details-top">
    <view class="top-bg">
      <view class="top-box">
        <view class="top-card">
          <view class="top-card-left">
            <image wx:if="{{unionInfo.logo}}" src="{{imgUrl}}{{unionInfo.logo}}"></image>
             <image wx:if="{{!unionInfo.logo}}" src="cloud://chedou-service.6368-chedou-service/images/default_user.png"></image>
          </view>
          <view class="top-card-right">
            {{unionInfo.name}}
          </view>
        </view>
      </view>
    </view>
  </view>
  <view class="union-details-content">
    <!-- 联盟简介 -->
    <view class="union-introduce">
      <text>联盟简介</text>
      <view class="union-introduce-content">{{unionInfo.intro}}</view>
    </view>
    <!-- 盟主 -->
    <view class="union-leader">
      <view>盟主</view>
      <view class="union-leader-info">
        <image src=""></image>
        <text>公司名称</text>
      </view>
    </view>
    <!-- 联盟成员 -->
    <view class="union-member">
      <view>联盟成员</view>
      <view>{{unionInfo.number}}人</view>
    </view>
    <!-- 主导业务 -->
    <view class="union-business">
      <text>主导业务</text>
      <view class="union-business-content">
        <view class="union-business-item" wx:for="{{unionInfo.module}}" wx:for-item="it">{{it}}</view>
      </view>
    </view>
    <!-- 按钮 -->
    <view class="union-btn-box">
      <view class="union-btn">申请加入</view>
    </view>
  </view>
</view>
