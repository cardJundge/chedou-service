.search-bg {
  width: 100%;
  height: 30rpx;
  background: #1a65ff;
  border-radius: 0 0 20rpx 20rpx;
  position: relative;
}

.search-box {
  width: 100%;
  height: 60rpx;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: absolute;
  bottom: -30rpx;
  top: 0;
  left: 0;
}

.search {
  width: 612rpx;
  height: 60rpx;
  background: #fff;
  border: 2rpx solid #f2f2f2;
  border-radius: 36rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 24rpx;
}

.search image {
  width: 36rpx;
  height: 36rpx;
}

