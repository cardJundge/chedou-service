  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  background: #1a65ff;
  text-align: right;
  line-height: 80rpx;
}

.server-content {
}

.server-list {
}

.server-item {
  width: 100%;
  padding: 0 24rpx;
  height: 160rpx;
  border-bottom: 1rpx solid #efefef;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.server-left {
  display: flex;
  align-items: center;
}

.server-left image{
 width: 80rpx;
 height: 80rpx;
 margin-right: 24rpx;
}

.server-right {
  display: flex;
  align-items: center;
}

.server-right-btn {
  width: 140rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: #1a65ff;
  border: 1rpx solid #1a65ff;
  border-radius: 100rpx;
}


.server-right-btn-del {
  color: #fff;
