/* 商品/服务 */
page {
  height: 100%;
}

.service-body {
  height: 100%;
}

.service-null {
  height: 100%;
  margin-top: 140rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.service-null-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.service-null-box view {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.service-null-box view:first-child {
  margin-bottom: 182rpx;
}

.service-null-box view:first-child image {
  width: 252rpx;
  height: 224rpx;
  margin-bottom: 45rpx;
}

.service-null-box text {
  font-size: 36rpx;
  color: #6e6e7a;
}

.service-null-box view:last-child image {
  width: 100rpx;
  height: 100rpx;
}

.service-null-box text {
  font-size: 36rpx;
  color: #6e6e7a;
}