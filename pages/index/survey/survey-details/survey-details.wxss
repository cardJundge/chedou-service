.survey-details-body {
}

.business {
  width: 100%;
  padding: 0 24rpx;
}

.business-title {
  font-size: 36rpx;
  padding: 24rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.business-content {
  width: 100%;
  box-shadow: 0 0 4rpx 0 rgba(0, 0, 0, 0.20);
  border-radius: 20rpx;
}

.business-item {
  width: 654rpx;
  height: 90rpx;
  border-bottom: 1rpx solid rgba(0,0,0,0.20);
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 24rpx;
}

/* 进度 */

.progress {
  width: 100%;
  padding: 0 24rpx;
}

.progress-title {
  font-size: 36rpx;
  padding: 24rpx 0;
}

.progress-content {
   width: 100%;
  box-shadow: 0 0 4rpx 0 rgba(0, 0, 0, 0.20);
  border-radius: 20rpx;
}

/* 操作 */

.operation {
  width: 100%;
  height: 80rpx;
  box-shadow: 0 -2rpx 0 0 rgba(0,0,0,0.10);
  line-height: 80rpx;
  text-align: center;
}
