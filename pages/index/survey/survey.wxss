.list-item {
  width: 100%;
  height: 135rpx;
  border-bottom: 1rpx solid #f7f7f7;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 24rpx;
}

.list-item-left {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.list-item-left text:first-child {
  margin-bottom: 12rpx;
}

.list-item-left text:last-child {
  font-size: 24rpx;
  color: #737373;
}

.list-item-right {
  width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 30rpx;
  color: #fff;
}

.more-data {
  width: 100%;
  line-height: 80rpx;
  text-align: center;
  color: #737373;
}

.no-data {
  width: 100%;
  margin-top: 120rpx;
  text-align: center;
  color: #737373;
}

.status01 {
  background: #1a65ff;
}

.status02 {
  background: #ff451a;
}

.status03 {
  background: #14d680;
}

.status04 {
  background: #ffa91a;
}

.status05 {
  background: #14d680;
}

.status06 {
  background: #d0d0d0;
}
