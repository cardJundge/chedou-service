<!--数据统计详情-->
<view class="defalut"></view>
<view class="data-details-body">
  <view class="chart-date">
    <block wx:for="{{chartDate}}" wx:key="">
      <text style="color:#fff;background:#1a65ff" wx:if="{{index == dataIndex}}" bindtap="selectDate" data-index="{{index}}">{{item}}</text>
      <text wx:else data-index="{{index}}" bindtap="selectDate">{{item}}</text>
    </block>
  </view>
  <ec-canvas id="mychart-dom-line" canvas-id="mychart-line" ec="{{ ec }}"></ec-canvas>
</view>

<view class="task-total">
  <text>累计任务流</text>
  <text>总数量50</text>
</view>

<view class="task-whole-mode">
  <view wx:for="{{taskCategory}}" wx:key="" class="task-category">
    <text>{{item.text}}</text>
    <text>{{item.num}}</text>
  </view>
</view>