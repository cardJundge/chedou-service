/* 业务模块 */

.business {
}

.business-title {
  width: 100%;
  padding: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.business-title text:first-child {
  font-size: 36rpx;
}

.business-title text:last-child {
  color: #1a65ff;
}

.business-content {
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
}

.business-item {
  width: 340rpx;
  height: 154rpx;
  box-shadow: 0 0 4rpx 0 rgba(0, 0, 0, 0.1);
  border-radius: 20rpx;
  margin-bottom: 22rpx;
  display: flex;
  align-items: center;
  padding: 24rpx;
  position: relative;
}

.business-item .left {
  width: 106rpx;
  height: 106rpx;
  margin-right: 12rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.business-item-text {
  width: 128rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.business-item-text text {
  font-size: 32rpx;
  color: #242429;
}

.business-item-edit {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: -10rpx;
  top: -10rpx;
}

/* 接单系统 */

.order {
}

.order-title {
  width: 100%;
  padding: 24rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.order-title text:first-child {
  font-size: 36rpx;
}

.order-content {
  width: 702rpx;
  margin: 0 24rpx 24rpx;
  padding: 0 24rpx 24rpx;
  box-shadow: 0 0 10rpx 0 rgba(0, 0, 0, 0.10);
  border-radius: 20rpx;

}

.order-null {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 78rpx 0;
  box-shadow: 0;
}

.order-null image {
  width: 150rpx;
  height: 150rpx;
  margin-bottom: 24rpx;
}

.order-null text {
 color: #aeaeae;
}