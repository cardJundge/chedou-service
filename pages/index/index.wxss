/* 业务模块 */

.business {
}

.business-title {
  width: 100%;
  padding: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.business-title text:first-child {
  font-size: 36rpx;
}

.business-content {
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
}

.business-item {
  width: 340rpx;
  height: 154rpx;
  box-shadow: 0 0 4rpx 0 rgba(0, 0, 0, 0.1);
  border-radius: 20rpx;
  margin-bottom: 22rpx;
  display: flex;
  align-items: center;
  padding: 24rpx;
}

.business-item image {
  width: 106rpx;
  height: 106rpx;
  margin-right: 12rpx;
}

.business-item-text {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.business-item-text text:first-child {
  font-size: 32rpx;
  color: #242429;
}

.business-item-text text:last-child {
  font-size: 24rpx;
  color: #aeaeae;
}

/* 接单系统 */

.order {
}

.order-title {
  width: 100%;
  padding: 24rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.order-title text:first-child {
  font-size: 36rpx;
}

.order-content {
  width: 702rpx;
  margin: 0 24rpx 24rpx;
  padding: 0 24rpx 24rpx;
  box-shadow: 0 0 10rpx 0 rgba(0, 0, 0, 0.10);
  border-radius: 20rpx;

}

.order-item {
  width: 100%;
  height: 155rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-item image{
  width: 100rpx;
  height: 100rpx;
}

.order-item-content {
  width: 530rpx;
  padding: 24rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #DADADA;
}

.order-item-content-left {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.order-item-content-left text:nth-child(2) {
  color: #5b5b5b;
}

.order-item-content-left text:nth-child(3) {
  font-size: 24rpx;
  color: #898989;
}

.order-item-content-right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.order-item-content-right text {
  font-size: 36rpx;
  color: #1a65ff;
  margin-bottom: 12rpx;
}

.state-btn {
  width: 180rpx;
  height: 50rpx;
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.state-color01 {
  color: #1a65ff;
  border: 1rpx solid #1a65ff;
}

.state-color02 {
  background: #1a65ff;
  color: #fff;
}

.state-color03 {
  background: #FFA91A;
  color: #fff;
}

.state-color04 {
  background: #14D680;
  color: #fff;
}

.state-color05 {
  background:  #D0D0D0;
  color: #fff;
}
