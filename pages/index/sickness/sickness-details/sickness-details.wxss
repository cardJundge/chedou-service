/* pages/businessmode/diseasesurvey/diseasesurvey.wxss */
.diseasestep{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.diseasestep text{
  width: 160rpx;
  height: 58rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(181, 209, 250, 0.5);
  color: #1a65ff;
  border-radius: 50rpx;
  border: 1rpx solid rgba(181, 209, 250, 0.5);
  font-size: 28rpx;
}

.diseasecontent{
  width: 92%;
  margin: 0 4%;
  display: flex;
  flex-direction: column;
  font-size: 26rpx;
}

.diseaseitem{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 60rpx;
  border-bottom: 1rpx solid #eee;
}

.wholetask{
  width: 92%;
  margin: 20rpx 4% 120rpx 4%;
  display: flex;
  flex-direction: column;
}

.wholetasktip{
  font-size: 32rpx;
  font-family: PingFangSC-Medium, sans-serif;
  letter-spacing: 1rpx;
  display: flex;
}

.line{
  width: 50rpx;
  height: 6rpx;
  background: #1a65ff;
  margin-top: 2rpx;
}

.tasklist{
  box-shadow: 0 0 2rpx 2rpx rgba(216, 216, 216, 0.5);
  border-radius: 20rpx;
  display: flex;
  justify-content: space-between;
  width: 100%;
  padding: 0 3%;
  height: 120rpx;
  align-items: center;
  margin: 2% 0;
}

.tasklist-feedback {
  width: 100%;
  padding: 0 3%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.tasklist-feedback text:first-child {
  line-height: 90rpx;
}

.tasklist-feedback text:last-child {
  width: 400rpx;
  line-height: 40rpx;
  text-align: right;
}

.item-content{
  display: flex;
  flex-direction: column;
}

.address{
  color: #bbb9b9;
  font-size: 24rpx;
  padding-left: 50rpx;
}

.item-result{
  width: 130rpx;
  height: 55rpx;
  border-radius: 50rpx;
  color: #bbb9b9;
  display: flex;
  justify-content: center;
  align-items: center;
}

.nextstep{
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #1a65ff;
  color: white;
  position: fixed;
  bottom: 0;
}

.wholebasetip{
  display: flex;
  line-height: 50rpx;
}

.base{
  color: #bbb9b9;
  font-size: 24rpx;
  font-family: PingFangSC-Medium, sans-serif;
  letter-spacing: 1rpx;
  display: flex;
  flex-direction: column;
  align-content: center;
  margin-right: 12rpx;
}

.active{
  color: #000;
  /* border-bottom: 5rpx solid #000; */
  font-weight: 600;
  font-size: 30rpx;
  width: 200rpx;
  margin-right: 12rpx;
  /* padding-top: 10rpx !important; */
}

.baseinfor{
  border-radius: 20rpx;
  border: 1rpx solid rgba(216, 216, 216, 0.5);
  margin-top: 16rpx;
}

.baseitem{
  box-shadow:none;
  border-bottom: 1rpx solid rgba(216, 216, 216, 0.5);
  border-radius: 0;
  height: 80rpx;
  padding: 0;
  margin: 0 3%;
  width: 94%;
}

.baseitem text:first-child{
  width: 240rpx;
}

.accidentstyle{
  display: flex;
  width:94%;
  margin: 14rpx 3% 2% 3%;
  flex-direction: column;
}

.pic-mode{
  width: 100%;
  margin: 3% 0;
  border-radius: 20rpx;
  box-shadow: 0 0 2rpx 2rpx rgba(216, 216, 216, 0.5);
  display: flex;
  flex-direction: column;
}

.pic-mode text{
  padding: 3% 0 0 3%;
}

.wholedataimg{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}

.datalist{
  width: 33.33%;
  display: flex;
  justify-content: center;
  height: 250rpx;
  flex-direction: column;
  align-items: center;
  margin: 14rpx 0;
}

.datalist image{
  width: 170rpx;
}

.datalist video{
  width: 170rpx;
}

.voice-mode{
  margin: 10rpx 30rpx 0 30rpx;
}

.add-img image{
  width: 70rpx;
  height: 70rpx;
}

.voicestyle{
  height: 200rpx;
}

.voice-img{
  width: 100rpx !important;
  height: 100rpx !important;
}

input{
  text-align: right;
}

.recording-whole{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 16rpx 3%;
}

.recording{
  display: flex;
  justify-content: center;
  width: 80%;
  height: 70rpx;
  align-items: center;
  border: 1rpx solid rgb(241, 241, 241);
  border-radius: 50rpx;
  
}

.recording image{
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

.shangchuan{
  width: 70rpx;
  height: 70rpx;
}

.imagesure{
  width: 100%;
  position: fixed;
  bottom: 0;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #1a65ff;
  color: white;
  letter-spacing: 1rpx;
}

.no-info {
  padding: 78rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

