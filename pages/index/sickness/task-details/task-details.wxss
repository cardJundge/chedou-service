/* 调查任务 */

.i-collapse-item {
  border-top: 0;
}
.task-details-body {
  width: 702rpx;
  margin: 0 auto;
}

.title{
  width: 100%;
  line-height: 100rpx;
  vertical-align: middle;
  font-size: 36rpx;
  font-family: "黑体";
  font-weight: bold;
}

.recordwhole{
  box-shadow: 0 0 2rpx 2rpx rgba(216, 216, 216, 0.5);
  border-radius: 20rpx;
  width: 100%;
  font-size: 34rpx;
}

.record{
  width: 100%;
  display: flex;
  align-items: center;
  position: relative;
  height: 90rpx;
  border-bottom: 1rpx dashed rgba(216, 216, 216, 0.5);
}

.delete{
  width: 100rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #1a65ff;
  border: 1rpx solid #1a65ff;
  border-radius: 12rpx;
  position: absolute;
  top: 15rpx;
  right: 30rpx;
}

.interviewtime{
  display: flex;
  justify-content: space-between;
  /* padding: 0 24rpx; */
  height: 90rpx;
  align-items: center;
  font-size: 30rpx;
  border-bottom: 1rpx solid rgba(216, 216, 216, 0.5);
}

.colorgray{
  color: 	#A9A9A9;
}

.colorlight{
  color: #000
}

.assessor{
  text-align: right;
  color: #A9A9A9;
}

.assessor1{
  color: #A9A9A9;
}

.modestyle{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  height: 200rpx;
}

.modestyle label{
  margin: 14rpx 0;
}

.modestyle textarea{
  width: 100%;
  height: 160rpx;
}

.investigation{
  padding: 0 24rpx;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  /* margin-bottom: 100rpx; */
}

.investigation label{
  margin: 14rpx 0;
}


.imagecell{
  display: flex;
  flex-wrap:wrap;
  margin-right: 14rpx;
  margin-bottom: 14rpx;
}

.imageitem{
  position: relative;
  width: 33.3%;
}

.pic{
  width: 200rpx;
  height: 200rpx;
}

.del{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: -16rpx;
  right: 2rpx;
  z-index: 1;
}

.voice{
  width: 140rpx;
  height: 140rpx;
  border-radius: 10rpx;
  border: 1rpx solid #eee;
  display: flex;
  justify-content: center;
  align-items: center; 
  margin-right: 14rpx;
  margin-bottom: 14rpx;
}

.voice image{
  width: 70rpx;
  height: 70rpx;
}

.rejectmode{
  width: 100%;
  margin-top: 20rpx;
  box-shadow: 0 0 2rpx 2rpx rgba(216, 216, 216, 0.5);
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
}

.rejectmode text{
  padding: 14rpx 24rpx;
}

