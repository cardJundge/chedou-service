/*自定义模块列表 */
@import "../common-top/common-top.wxss";
.taskflow-body {

}

.list-content {
  margin-top: 60rpx;
}

.list-item {
  width: 100%;
  height: 135rpx;
  border-bottom: 1rpx solid #f7f7f7;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 24rpx;
}

.list-item-left {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.list-item-left text:first-child {
  margin-bottom: 12rpx;
}

.list-item-left text:last-child {
  font-size: 24rpx;
  color: #737373;
}

.list-item-right {
  width: 180rpx;
  height: 135rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.list-item-right view {
  width: 180rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 30rpx;
}

.status01 {
  background: #1a65ff;
  color: #fff;
}

.status02 {
  background: #f2f2f2;
  color: #989898;
}
.no-data {
  width: 100%;
  margin-top: 120rpx;
  text-align: center;
  color: #737373;
}
