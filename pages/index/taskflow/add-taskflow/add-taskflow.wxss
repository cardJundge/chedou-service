/* 添加自定义模块任务流 */

.add-list {
  display: flex;
  flex-direction: column;
}

.add-item {
  height: 150rpx;
  display: flex;
  flex-direction: column;
  padding: 24rpx;
  border-bottom: 1rpx solid #e9e9e9;
}

.add-item-title {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.add-item-title text:first-child {
  color: #ff5c47;
  width: 28rpx;
}

.add-item-content {
  padding-left: 28rpx;
  position: relative;
}

.add-item-content input {
  width: 80%;
}

.image-box {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  padding: 38rpx;
}

.image-item {
  padding: 12rpx;
}

.image-item image {
  width: 200rpx;
  height: 200rpx;
}

.location-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.location-content image {
  width: 36rpx;
  height: 44rpx;
}
