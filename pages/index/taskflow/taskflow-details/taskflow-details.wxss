/* 自定义模块详情 */

.details-top {
  padding: 12rpx 24rpx;
}

.details-top .top-item {
  width: 100%;
  height: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #dbdbdb;
  font-size: 24rpx;
}

.details-content {
}

.content-tab {
  width: 100%;
  padding: 12rpx 24rpx;
  display: flex;
  align-items: center;
  color: #828282;
}

.tab-item {
  line-height: 48rpx;
  margin-right: 36rpx;
  font-size: 24rpx;
  position: relative;
}

.tab-item .line {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 50rpx;
  height: 6rpx;
  background: #1a65ff;
}

.tab-active {
  font-size: 30rpx;
  color: #242429;
}

.content-box {
}

.task-input {
  width: 100%;
  padding: 12rpx 24rpx;
}

.task-input-item {
  width: 100%;
  padding: 32rpx 12rpx;
  box-shadow: 0 0 6rpx 0 rgba(0,0,0,0.1);
  border-radius: 20rpx;
  margin: 24rpx 0;
}

.item-incomplete {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-incomplete>view {
  width: 166rpx;
  height: 60rpx;
  background: #1a65ff;
  border-radius: 30rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.item-complete {
}

.item-complete-title {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-complete-title>view {
  width: 166rpx;
  height: 60rpx;
  background: #F2F2F2;
  border-radius: 30rpx;
  color: #989898;
  display: flex;
  justify-content: center;
  align-items: center;
}

.item-complete-text {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding: 12rpx;
}

.item-complete-text view {
  display: flex;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.item-complete-text view text:first-child {
  color: #9C9C9C;
  margin-right: 24rpx;
}

.evaluate {
  width: 100%;
  padding: 12rpx 24rpx;
}

.evaluate-item {
  width: 100%;
  padding: 32rpx 12rpx;
  box-shadow: 0 0 6rpx 0 rgba(0,0,0,0.1);
  border-radius: 20rpx;
  margin: 24rpx 0;
}

.evaluate-item>view {
  font-size: 24rpx;
  margin-top: 32rpx;
}

.evaluate-item>view>text:first-child {
  color: #9C9C9C;
  margin-right: 24rpx;
}
