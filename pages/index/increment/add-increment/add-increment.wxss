/* 增值服务添加客户 */
.add-content {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.add-item {
  height: 150rpx;
  display: flex;
  flex-direction: column;
  padding: 24rpx;
  border-bottom: 1rpx solid #e9e9e9;
}

.add-item-title {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.add-item-title text:first-child {
  color: #ff5c47;
  width: 28rpx;
}

.add-item-content {
  padding-left: 28rpx;
  position: relative;
}

.add-item-content input {
  width: 80%;
}