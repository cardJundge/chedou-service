/* 增值服务添加客户 */
.add-content {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.add-item {
  height: 150rpx;
  display: flex;
  flex-direction: column;
  padding: 24rpx;
  border-bottom: 1rpx solid #e9e9e9;
}

.add-item-title {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.add-item-title text:first-child {
  color: #ff5c47;
  width: 28rpx;
}

.add-item-content {
  padding-left: 28rpx;
  position: relative;
}

.add-item-content input {
  width: 80%;
}

.add-btn {
  width: 100%;
  height: 120rpx;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}

.add-btn view {
  width: 702rpx;
  height: 80rpx;
  background: #1a65ff;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 20rpx;
}