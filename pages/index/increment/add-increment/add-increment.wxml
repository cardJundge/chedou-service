<!--增值服务添加客户-->
<view class="add-content">
	<view class="add-item">
		<view class="add-item-title">
			<text>*</text>
			<text>客户姓名</text>
		</view>
		<view class="add-item-content">
			<input placeholder="请输入客户姓名" placeholder-class="ph-class" bindinput="getInputName" value="{{}}"></input>
		</view>
	</view>
	<view class="add-item">
		<view class="add-item-title">
			<text>*</text>
			<text>客户电话</text>
		</view>
		<view class="add-item-content">
			<input placeholder="请输入客户电话" placeholder-class="ph-class" bindinput="getInputMobile" value="{{}}"></input>
		</view>
	</view>
	<view class="add-item">
		<view class="add-item-title">
			<text>*</text>
			<text>增值服务包</text>
		</view>
		<view class="add-item-content">
			<picker bindchange="packSelect" range="{{servicePack}}">
				<view>
					<input placeholder="请选择增值服务包" placeholder-class="ph-class" disabled="disabled" value="{{packVal}}"></input>
				</view>
			</picker>
		</view>
	</view>
	<view class="add-btn">
		<view bindtap="onConfirm">确定</view>
	</view>
</view>