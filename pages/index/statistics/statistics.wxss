/* 数据统计 */
page {
  background: #F8F8F8;
}

.statistics {
  width: 100%;
}

.top {
  width: 100%;
  height: 272rpx;
  background: url('https://6f6d-omo-service-b6dza-1301029807.tcb.qcloud.la/images/statistics_bg.png?sign=f806b59907d76b1bd3e5500c500fd0e0&t=1585633310') no-repeat center;
  background-size: 100% 100%;
  padding: 0 24rpx;
  position: relative;
  margin-bottom: 174rpx;
}

.top-tab {
  display: flex;
  align-items: center;
  color: #fff;
  font-size: 24rpx;
}

.top-tab-item {
  margin-right: 36rpx;
  padding: 24rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}

.top-tab-item-active {
  font-size: 30rpx;
}

.top-tab-item-triangle {
  transform: rotate(270deg);
  margin-left: 10rpx;
}

.top-tab-item view {
  width: 100%;
  height: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  left: 0;
  bottom: 0;
}

.top-content {
  width: 702rpx;
  height: 306rpx;
  position: absolute;
  top: 98rpx;
  left: 24rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.top-content-num {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.top-content-num-items {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.top-content-num-items>text:first-child {
  font-size: 50rpx;
}

.top-content-num-items>text:last-child {
  color: #9A9A9A;
}

.top-content-msg {
  font-size: 24rpx;
  color: #C0C0C0;
  margin-bottom: 12rpx;
}

.chart-tab {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
}

.chart-tab-item {
  width: 110rpx;
  height: 40rpx;
  border-radius: 20rpx;
  border: 1rpx solid #1A65FF;
  color: #1A65FF;
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 26rpx;
}

.chart-tab-item-active {
  background: #1A65FF;
  color: #fff;
}

/* 时效 */
.ageing {
  width: 702rpx;
  margin: 24rpx auto;
  padding: 24rpx;
  background: #fff;
  border-radius: 20rpx;
}

.ageing-list {
}

.ageing-item {
  width: 100%;
  height: 90rpx;
  border-bottom: 1rpx solid #D7D7D7;
  color: #919191;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* 下拉选择框 */
.select {
  width: 702rpx;
  margin: 24rpx auto;
  padding: 24rpx;
  background: #fff;
  border-radius: 20rpx;
}

.select-item {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.select-item-left {
  width: 220rpx;
  height: 300rpx;
}

.select-item-right {
  width: 380rpx;
}

.select-item-right-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
}

.select-item-right-item view {
  display: flex;
  align-items: center;
}

.select-item-right-item view view {
  width: 30rpx;
  height: 30rpx;
  margin-right: 24rpx;
}

.select-item-right-item view text {
  color: #919191;
}

