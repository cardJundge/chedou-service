/* 创建模块====》开始页面 */
.zero-body {}

.zero-tab {
  width: 100%;
  padding: 24rpx;
  display: flex;
  align-items: center;
}

.zero-tab-item {
  width: 180rpx;
  height: 60rpx;
  background: #E7EFFF;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #1a65ff;
  margin-right: 24rpx;
}

.zero-tab-item-active {
  color: #fff;
  background: #1a65ff;
}

.system,
.define {
  width: 100%;
}

.list-item {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  padding: 24rpx 0;
}

.list-item-left {
  width: 110rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.list-item-left image {
  width: 62rpx;
  height: 62rpx;
}

.list-item-right {
  width: 640rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #E9E9E9;
  padding-right: 24rpx;
}

.list-item text {
  font-size: 32rpx;
  color: #242429;
  width: 128rpx;
}