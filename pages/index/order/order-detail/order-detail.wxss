/* 订单详情 */

.order-detail-body {
}

.order-title {
  width: 100%;
  height: 136rpx;
  position: fixed;
  top: 0;
  left: 0;
  background: #1a65ff;
  border-radius: 0 0 20rpx 20rpx;
}

.order-bg {
  width: 100%;
  height: 376rpx;
  padding: 0 24rpx;
  position: absolute;
  bottom: -264rpx;
  left: 0;
}

.order-box {
  width: 702rpx;
  height: 376rpx;
  background: url('https://6368-chedou-service-1257955119.tcb.qcloud.la/images/detail_bg.png?sign=83dd2a5594c6da6ce29313a5b7a8c82b&t=1571381537') no-repeat center;
  background-size: 100% 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 24rpx;
}

.order-box-top {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.order-box-top text:first-child {
  font-size: 36rpx;
  font-family: PingFangSC-Medium;
}

.order-box-top text:last-child {
  font-size: 36rpx;
  font-family: PingFangSC-Medium;
}

.order-box-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-box-msg {
  display: flex;
  flex-direction: column;
}

.order-box-msg text {
  color: #898989;
  margin-bottom: 6rpx;
}

.order-box-msg text:first-child {
  font-size: 34rpx;
  color: #242429;
}

.order-box-msg text:last-child {
  margin-bottom: 0;
}

.order-box-img {
  margin-right: 12rpx;
}

.order-box-img image {
  width: 100rpx;
  height: 100rpx;
}

.progress {
  margin-top: 424rpx;
  width: 100%;
  padding: 0 24rpx 104rpx;
}

.progress-title {
  font-size: 36rpx;
  padding: 24rpx 0;
}

.progress-content {
  width: 100%;
  box-shadow: 0 0 4rpx 0 rgba(0, 0, 0, 0.20);
  border-radius: 20rpx;
}

.progress-item {
  width: 702rpx;
  padding: 24rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.20);
  display: flex;
}

.progress-left {
  width: 18rpx;
  height: 40rpx;
  line-height: 40rpx;
  margin-right: 24rpx;
}

.progress-left image {
  width: 18rpx;
  height: 18rpx;
}

.progress-right {
  display: flex;
  flex-direction: column;
}

.progress-right text:nth-child(1) {
  line-height: 40rpx;
}

.progress-right text:nth-child(2) {
  font-size: 24rpx;
  color: #717171;
}

.progress-image {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}


.order-bottom {
  width: 100%;
  height: 90rpx;
  position: fixed;
  bottom: 0;
  left: 0;
}

.order-btn {
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 36rpx;
}

.order-status-01 {
  background: #1a65ff;
  color: #fff;
  border: 1rpx solid #1a65ff;
}

.order-status-02 {
  display: flex;
  align-items: center;
}

.order-status-02 view:first-child {
  width: 50%;
  background: #fff;
  color: #1a65ff;
  border: 1rpx solid #1a65ff;
}

.order-status-02 view:last-child {
  width: 50%;
  background: #1a65ff;
  color: #fff;
  border: 1rpx solid #1a65ff;
}

/* ---------------------------------- */
