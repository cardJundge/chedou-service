<!--订单详情-->
<view class="order-detail-body">
  <view class="order-title">
    <view class="order-bg">
      <view class="order-box">
        <view class="order-box-top">
          <text>{{detailData.car_no ? detailData.car_no : '陕Axxxxx'}}</text>
          <text>{{detailData.mobile ? detailData.mobile : '176xxxxx426'}}</text>
        </view>
        <view class="order-box-content">
          <view class="order-box-msg">
            <text>{{orderName}}</text>
            <text>订单时间: {{detailData.add_time}}</text>
            <text>订单编号: {{detailData.order_no}}</text>
            <text>支付方式: 线上支付</text>
          </view>
          <view class="order-box-img">
            <image src="{{orderImg}}"></image>
          </view>
        </view>
      </view>
    </view>
  </view>
    <!-- 进度 -->
  <!-- <view class="progress" wx:if="{{schedule.length !== 0}}"> -->
  <view class="progress">
    <view class="progress-title">进度</view>
    <view class="progress-content">
      <view class="progress-item">
        <view class="progress-left">
          <image src="/images/index/icon_light.png"></image>
        </view>
        <view class="progress-right">
          <text>服务商接单</text>
          <text>2019-10-30</text>
          <view class="progress-image" wx:if="{{item.picture}}">
            
          </view>
        </view>
      </view>
    </view>
  </view>

  <view class="order-bottom">
    <view class="order-btn order-status-01" wx:if="{{detailData.status == 1 && detailData.work_status == 0}}">接单</view>
    <view class="order-btn order-status-02" wx:if="{{detailData.status == 1 && detailData.work_status == 1}}">
      <view>添加进度</view>
      <view>去分配</view>
    </view>
  </view>
</view>